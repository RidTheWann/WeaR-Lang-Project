{
    "name": "wear-lang",
    "publisher": "RidTheWann",
    "version": "1.0.1",
    "description": "WeaR Lang - A polyglot programming language friendly for beginners but powerful for professionals",
    "main": "dist/index.js",
    "bin": {
        "wear": "./dist/cli.js"
    },
    "scripts": {
        "build": "tsc",
        "build:web": "esbuild src/web.ts --bundle --outfile=docs/wear-web.js --format=iife --platform=browser --target=es2020",
        "demo": "npx ts-node demo.ts",
        "start": "node dist/index.js",
        "playground": "npm run build:web && start docs/index.html"
    },
    "keywords": [
        "programming-language",
        "interpreter",
        "typescript",
        "polyglot"
    ],
    "author": "Ridwan",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^20.10.0",
        "esbuild": "^0.19.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.0"
    },
    "contributes": {
        "languages": [
            {
                "id": "wear",
                "aliases": [
                    "WeaR Lang",
                    "wear"
                ],
                "extensions": [
                    ".wr"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "wear",
                "scopeName": "source.wear",
                "path": "./syntaxes/wear.tmLanguage.json"
            }
        ]
    },
    "engines": {
        "vscode": "^1.80.0"
    }
}